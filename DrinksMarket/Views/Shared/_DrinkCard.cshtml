@model Drink; 

<div class="col-3 m-3 card w-25">

    <img src="@Model.ImageUrl" alt="" class="card-img-top">
    <div class="card-body">
            <h5 class="card-title"> 
                <a class="text-decoration-none text-primary" asp-controller="Drink" asp-action="Details" asp-route-id="@Model.DrinkId">@Model.Name</a>
            </h5>
            <p class="card-text">@Model.ShortDescription</p>
    </div>
    <div class="card-body d-flex justify-content-between align-items-end">

            <a class="btn btn-info"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-drinkId="@Model.DrinkId">Add To Cart</a>
        <h5 class="">@Model.Price.ToString("c")</h5>

    </div>
     
</div>
